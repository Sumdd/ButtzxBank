<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/layui/css/layui.css")" rel="stylesheet" />
</head>
<body>
    <div class="layui-header">
        <ul class="layui-nav layui-bg-green">
            <li class="layui-nav-item">
                <label>@ViewBag.Title</label>
            </li>
            @Html.Partial("~/Views/Home/P_NAV.cshtml")
        </ul>
    </div>
    <div class="layui-card">
        <div class="layui-card-header">
            查询条件
        </div>
        <div class="layui-card-header layuiadmin-card-header-auto" id="defaultSp">
            <form class="layui-form" lay-filter="defaultSearch">
                <div class="layui-inline">
                    <label class="layui-form-label" title="客户证件号">客户证件号</label>
                    <div class="layui-input-block">
                        <input type="text" name="custNbr" autocomplete="off" class="layui-input" />
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label" title="开始日期">开始日期</label>
                    <div class="layui-input-block">
                        <input type="text" name="startDate" required lay-verify="required" lay-verType="tips" autocomplete="off" class="layui-input datepicker" />
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label" title="结束日期">结束日期</label>
                    <div class="layui-input-block">
                        <input type="text" name="endDate" required lay-verify="required" lay-verType="tips" autocomplete="off" class="layui-input datepicker" />
                    </div>
                </div>
            </form>
        </div>
        <div class="layui-card-body">
            <div class="layui-hide" id="defaultTable" lay-filter="defaultTable"></div>
        </div>
        <div class="layui-card-body layui-hide xd">
            <table class="layui-table" lay-size="sm" style="width:auto">
                <tr>
                    <td style="vertical-align:top">
                        <table class="layui-table" lay-size="sm" style="width:auto">
                            <thead>
                                <tr>
                                    <th>时间</th>
                                    <th>内容</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>2020-12-10</td>
                                    <td>修订</td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                    <td style="vertical-align:top">
                        <table class="layui-table" lay-size="sm" style="width:auto">
                            <thead>
                                <tr>
                                    <th>标识符</th>
                                    <th>中文名称</th>
                                    <th>数据格式</th>
                                    <th>说明</th>
                                    <th>内容</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>custName</td>
                                    <td>客户姓名</td>
                                    <td style="background-color:yellow;color:red">mMAX(100)</td>
                                    <td></td>
                                    <td>变化</td>
                                </tr>
                                <tr>
                                    <td>custId</td>
                                    <td>客户号</td>
                                    <td>anMAX(20)</td>
                                    <td></td>
                                    <td>增加</td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <script src="@Url.Content("~/layui/layui.js")"></script>
    <script>
        layui.config({
            base: '@Url.Content("~/layui/modules/")'
        }).use(['element', 'form', 'table', 'layer', 'core'], function () {
            var $ = layui.jquery,
                element = layui.element,
                core = layui.core,
                layer = layui.layer,
                form = layui.form,
                table = layui.table;

            core.defaultQuery.url = '@Url.Content("~/Home/f_casepool_list")';

            table.render({
                size: 'sm',
                elem: '#defaultTable',
                id: 'defaultTable',
                method: 'post',
                where: {
                    queryString: core.queryString()
                },
                page: true,
                even: true,
                autoSort: false,
                cellMinWidth: 80,
                cols: [[
                    { type: 'numbers', fixed: 'left' },
                    { type: 'checkbox', fixed: 'left' },
                    { field: 'custNbr', title: '客户证件号码' },
                    { field: 'custName', title: '客户姓名' },
                    { field: 'queueName', title: '队列名称' },
                    { field: 'outDate', title: '委案日期' },
                    { field: 'outEndDate', title: '委案到期日' },
                    { field: 'dpd', title: '逾期天数' },
                    { field: 'reduceFlag', title: '减免标识' },
                    { field: 'custBal', title: '客户余额' },
                    { field: 'custRmbBal', title: '客户人民币余额' },
                    { field: 'custUsdBal', title: '客户美元余额' },
                    { field: 'principal', title: '客户总本金' },
                    { field: 'custInstResidualBal', title: '客户分期剩余余额' },
                    { field: 'cd', title: '客户分期剩余余额' },
                    { field: 'cityName', title: '城市名称' },
                    { field: 'branchName', title: '分行名称' },
                    { field: 'custId', title: '客户号' }
                ]]
            });

            core.loadQuery('@ViewBag.queryString');
        });
    </script>
</body>
</html>